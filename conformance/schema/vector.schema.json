{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "$id": "https://radroots.org/sdk/conformance/vector.schema.json",
  "title": "radroots sdk conformance vector",
  "type": "object",
  "required": [
    "suite",
    "contract_version",
    "vectors"
  ],
  "properties": {
    "suite": {
      "type": "string",
      "minLength": 1
    },
    "contract_version": {
      "type": "string",
      "pattern": "^[0-9]+\\.[0-9]+\\.[0-9]+$"
    },
    "vectors": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "kind",
          "input",
          "expected"
        ],
        "properties": {
          "id": {
            "type": "string",
            "minLength": 1
          },
          "kind": {
            "type": "string",
            "minLength": 1
          },
          "input": {},
          "expected": {}
        },
        "additionalProperties": false
      }
    }
  },
  "additionalProperties": false
}
